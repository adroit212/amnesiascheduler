<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="amnesiascheduler.ephraim.com.amnesiascheduler.SetReminderActivity"
    android:padding="20dp"
    android:background="@drawable/app_back">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Schedule Reminder"
        android:textSize="24sp"
        android:textColor="#000"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textColor="#000"
            android:textSize="24sp"
            android:text="Reminder Date:"/>

        <TextView
            android:id="@+id/sr_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textColor="#000"
            android:background="#fff"
            android:textSize="24sp"
            android:text=""/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textColor="#000"
            android:textSize="24sp"
            android:text="Reminder Time:"/>

        <TextView
            android:id="@+id/sr_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textColor="#000"
            android:background="#fff"
            android:textSize="24sp"
            android:text=""/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="24sp"
            android:text="Purpose:"/>

        <EditText
            android:id="@+id/sr_purpose_et"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <Button
            android:id="@+id/sr_set_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set reminder"
            android:textColor="#fff"
            android:textSize="24sp"
            android:background="@color/colorPrimaryDark"/>

    </LinearLayout>

</RelativeLayout>
